<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".games.smartquiz.SmartQuiz">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/quizGame_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="Smart Quiz"
            android:textAlignment="center"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/quiz_point"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quizGame_title"
            android:text="Point: 0/10" />

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/quiz_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/quiz_point"
            android:layout_margin="15dp"
            app:cardCornerRadius="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/quizGame_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="Question1"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/quizGame_question"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:textAlignment="center">

                        <Button
                            android:id="@+id/quizGame_answer_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 1" />

                        <Button
                            android:id="@+id/quizGame_answer_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 1" />

                        <Button
                            android:id="@+id/quizGame_answer_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 1" />

                        <Button
                            android:id="@+id/quizGame_answer_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 1" />
                    </GridLayout>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</FrameLayout>