<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutProductItem"
    android:layout_width="match_parent"
    android:layout_height="182dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#e6f2ff"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="414dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/product_image"
                android:text="Trà Sữa Nướng"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ScrollView
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:layout_below="@id/product_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/product_image">

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="- Cà phê capuchino gồm có 3 phần, đó là: cà phê espresso, sữa nóng được tạo bọt và một ít bột cacao (hoặc bột sô cô la, bột quế)."
                    android:textSize="18dp" />
            </ScrollView>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:layout_marginStart="101dp"
                android:layout_marginTop="74dp"
                android:layout_toEndOf="@+id/product_image"
                android:padding="10dp"
                android:text="35000"
                android:textColor="#eb3434"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pricetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:layout_marginStart="175dp"
                android:layout_marginTop="72dp"
                android:layout_toEndOf="@+id/product_image"
                android:padding="10dp"
                android:text="VND"
                android:textColor="#eb3434"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pricetext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:layout_marginStart="38dp"
                android:layout_marginLeft="680dp"
                android:layout_marginTop="74dp"
                android:layout_toEndOf="@+id/product_image"
                android:padding="10dp"
                android:text="Price: "
                android:textColor="#eb3434"

                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>