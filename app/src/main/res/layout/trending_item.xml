<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTrendingItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="10dp">


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#fffae6"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/trend_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/tra_sua_nuong" />

            <TextView
                android:id="@+id/trend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trend_image"
                android:layout_centerHorizontal="true"
                android:text="Trà Sữa Nướng"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/trend_description"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_below="@id/trend_name"
                android:padding="10dp"
                android:text="Ngon vcl"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/trend_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trend_description"
                android:drawableStart="@drawable/ic_rate_star"
                android:padding="5dp"
                android:text=" 5.0"
                android:textSize="15dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>